{
  "name": "node-movies",
  "version": "1.0.0",
  "description": "The Backend for Node Movies application",
  "main": "dist",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "db:drop": "tsx --env-file .env ./src/db/drop.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "tsx --env-file .env ./src/db/seed.ts",
    "dev": "tsx watch --env-file=.env src/server.ts",
    "jwt": "echo JWT_SECRET=$(node -e 'console.log(require(\"crypto\").randomBytes(32).toString(\"hex\"))')",
    "predb:migrate": "pnpm db:generate",
    "start": "node --env-file=.env .",
    "typecheck": "tsc -b",
    "typecheck:watch": "tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rafaScalet/Node-Movies.git"
  },
  "author": "NodeMovies Inc.",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rafaScalet/Node-Movies/issues"
  },
  "engines": {
    "node": "22"
  },
  "packageManager": "pnpm@10.18.1+sha512.77a884a165cbba2d8d1c19e3b4880eee6d2fcabd0d879121e282196b80042351d5eb3ca0935fa599da1dc51265cc68816ad2bddd2a2de5ea9fdf92adbec7cd34",
  "homepage": "https://github.com/rafaScalet/Node-Movies#readme",
  "devDependencies": {
    "@types/node": "^24.7.0",
    "drizzle-kit": "^0.31.6",
    "pino-pretty": "^13.1.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/swagger": "^9.5.2",
    "@libsql/client": "^0.15.15",
    "@scalar/fastify-api-reference": "^1.37.0",
    "argon2": "^0.44.0",
    "drizzle-orm": "^0.44.7",
    "drizzle-seed": "^0.3.1",
    "fastify": "^5.6.1",
    "fastify-type-provider-zod": "^6.0.0",
    "zod": "^4.1.12"
  }
}
